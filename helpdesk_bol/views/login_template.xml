<odoo>

    <template inherit_id="web.login" id="login" name="Login">
        <xpath expr="//div[hasclass('field-login')]" position="replace">
            <div class="mb-3 field-login">
                <label for="login" class="form-label">User</label>
                <input type="text" placeholder="User" name="login" t-att-value="login" id="login" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autocomplete="username" autofocus="autofocus" autocapitalize="off"/>
            </div>
        </xpath>

    </template>

</odoo>
