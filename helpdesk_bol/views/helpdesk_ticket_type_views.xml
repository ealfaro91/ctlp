<odoo>

    <!-- FORM VIEW -->

   <record id="helpdesk_ticket_type_form_inh" model="ir.ui.view">
        <field name="name">helpdesk.ticket.type.form.inh</field>
        <field name="model">helpdesk.ticket.type</field>
        <field name="inherit_id" ref="helpdesk_type.helpdesk_ticket_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]" position="after">
                <group>
                    <field name="area_id" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                    <field name="category_ids" widget="many2many_tags" readonly="1" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                </group>
            </xpath>
            <field name="team_ids" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
   </record>

    <!-- TREE VIEW -->

    <record id="helpdesk_ticket_type_tree_inh" model="ir.ui.view">
        <field name="name">helpdesk.ticket.type.tree.inh</field>
        <field name="model">helpdesk.ticket.type</field>
        <field name="inherit_id" ref="helpdesk_type.helpdesk_ticket_type_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
               <field name="sequence" widget="handle"/>
           </field>
           <field name="name" position="after">
               <field name="area_id"/>
               <field name="category_ids" widget="many2many_tags"/>
           </field>
        </field>
    </record>

     <!-- SEARCH VIEW -->

    <record id="helpdesk_ticket_type_search_view" model="ir.ui.view">
        <field name="name">helpdesk.ticket.type.search.view</field>
        <field name="model">helpdesk.ticket.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter string="Area" name="groupby_area" context="{'group_by': 'area_id'}"/>
            </search>
        </field>
    </record>

       <!-- ACTION -->

    <record id="helpdesk_type.action_helpdesk_ticket_type" model="ir.actions.act_window">
        <field name="context">{"search_default_groupby_area": True}</field>
    </record>


</odoo>
