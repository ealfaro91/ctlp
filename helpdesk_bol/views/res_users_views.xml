<odoo>

    <!-- FORM VIEW INHERIT -->

    <record id="res_users_form_view" model="ir.ui.view">
        <field name="name">res.users.area.form.view</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="before">
                <group>
                    <field name="area"/>
                </group>
            </xpath>
            <xpath expr="//notebook/page[@name='access_rights']/group" position="after">
                <group string="Areas allowed">
                    <field name="area_ids" widget="many2many_tags" options="{'no_create': True, 'color_field': 'color'}"/>
                </group>
            </xpath>
        </field>
    </record>


    <!-- FORM VIEW INHERIT -->

    <record id="res_users_tree_view" model="ir.ui.view">
        <field name="name">res.users.area.tree.view</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='login']" position="after">
                <field name="area"/>
            </xpath>
        </field>
    </record>


</odoo>
