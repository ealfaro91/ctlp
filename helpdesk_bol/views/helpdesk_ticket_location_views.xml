<odoo>

    <!-- FORM VIEW -->

    <record id="helpdesk_ticket_location_form_view" model="ir.ui.view">
        <field name="name">helpdesk.ticket.location.form.view</field>
        <field name="model">helpdesk.ticket.location</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Location"/>
                        <h1>
                            <div class="d-flex">
                                <field name="name"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <field name="area_id" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients', 'open_attachments': True}"/>
                </div>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->

    <record id="helpdesk_ticket_location_tree_view" model="ir.ui.view">
        <field name="name">helpdesk.ticket.location.tree.view</field>
        <field name="model">helpdesk.ticket.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="area_id"/>
            </tree>
        </field>
    </record>

    <!-- SEARCH VIEW -->

    <record id="helpdesk_ticket_location_search_view" model="ir.ui.view">
        <field name="name">helpdesk.ticket.location.search.view</field>
        <field name="model">helpdesk.ticket.location</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="area_id"/>
                <filter string="Area" name="groupby_area" context="{'group_by': 'area_id'}"/>
            </search>
        </field>
    </record>

    <!-- ACTION -->

    <record id="helpdesk_ticket_location_action" model="ir.actions.act_window">
        <field name="name">Location</field>
        <field name="res_model">helpdesk.ticket.location</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{ "search_default_groupby_area": True}</field>
    </record>

    <!-- MENUS -->

   <menuitem
        id="helpdesk_ticket_location_menu"
        name="Location"
        parent="helpdesk_mgmt.helpdesk_ticket_config_main_menu"
        action="helpdesk_ticket_location_action"
        sequence="15"/>

   <menuitem
        id="helpdesk_ticket_resource_calendar_menu"
        name="Resouce Calendar"
        parent="helpdesk_mgmt.helpdesk_ticket_config_main_menu"
        action="resource.action_resource_calendar_form"
        sequence="99"/>




</odoo>
