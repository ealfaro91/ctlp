<odoo>
    <data noupdate="0">

        <record id="group_helpdesk_area_changer" model="res.groups">
            <field name="name">Allowed to change ticket area</field>
            <field name="category_id" ref="helpdesk_mgmt.module_helpdesk_category"/>
            <field name="implied_ids" eval="[(4, ref('helpdesk_mgmt.group_helpdesk_manager'))]"/>
        </record>

    </data>
    <data noupdate="1">
        <!--  Ticket rules -->

        <record id="helpdesk_ticket_personal_rule" model="ir.rule">
            <field name="name">Personal Tickets</field>
            <field name="model_id" ref="model_helpdesk_ticket"/>
            <field name="domain_force">["|", ('user_id', '=', user.id), '&amp;', ('user_id','=',False), ('area_id', 'in', user.area_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('helpdesk_mgmt.group_helpdesk_user_own'))]" />
        </record>
        <record id="helpdesk_ticket_team_rule" model="ir.rule">
            <field name="name">Team Tickets</field>
            <field name="domain_force">['|',('area_id','in',user.area_ids.ids),('area_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('helpdesk_mgmt.group_helpdesk_user_team'))]" />
        </record>
        <record id="helpdesk_ticket_user_rule" model="ir.rule">
            <field name="name">All Tickets Areas Allowed</field>
            <field name="model_id" ref="model_helpdesk_ticket"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('helpdesk_bol.group_helpdesk_area_changer'))]"/>
        </record>

