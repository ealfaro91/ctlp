<odoo>

    <record id="view_merge_ticket_wizard_form" model="ir.ui.view">
        <field name="name">merge.ticket.wizard.form</field>
        <field name="model">merge.ticket.wizard</field>
        <field name="arch" type="xml">
            <form string="Merge Tickets">
                <div class="alert alert-info float-left" role="alert">
                    Warning: If you merge this will create a new ticket with the selected tickets. The original tickets will be closed.
                </div>
                <group>
                    <group>
                        <field name="user_id" readonly="1" force_save="1"/>
<!--                        <field name="merge_by"/>-->
                        <field name="area_id" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                        <field name="ticket_type_id" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                        <field name="category_id" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                        <field name="subcategory_id" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                        <field name="location_id" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                    </group>
                    <group>
                        <field name="merge_reason"/>
                        <field name="partner_id" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                    </group>
                </group>
                <notebook>
                    <page string="Tickets to merge">
                        <field name="ticket_ids"/>
                    </page>
                </notebook>
                <footer>
                    <button string="Merge" type="object" name="action_merge_tickets" class="btn-danger" icon="fa-compress" confirm="Are you sure?"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_merge_ticket_wizard" model="ir.actions.act_window">
        <field name="name">Merge Tickets</field>
        <field name="res_model">merge.ticket.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="helpdesk_mgmt.model_helpdesk_ticket"/>
        <field name="binding_view_types">list</field>
    </record>


</odoo>
