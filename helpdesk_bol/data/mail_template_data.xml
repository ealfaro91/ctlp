<odoo noupdate="0">

    <!-- TEMPLATE CREATION -->

    <record id="ticket_creation" model="mail.template">
        <field name="name">Help Desk Ticket Creation</field>
        <field name="model_id" ref="helpdesk.model_helpdesk_ticket"/>
        <field name="auto_delete" eval="False"/>
        <field name="email_from">{{ (object.company_id.email) }}</field>
        <field name="email_to">{{ (object.partner_email) }}</field>
        <field name="lang">${object.partner_id.lang}</field>
        <field name="subject">Ticket Creation : {{ (object.name) }}</field>
        <field name="body_html" type="html">
            <p>Dear {{ (object.partner_id.name) }}</p>
            <br/>
            <p>This automatic message is to notify that your ticket {{ (object.number) }} with subject {{ (object.name) }} has been received.</p>
            <p>Creation datetime: ${object.create_date.strftime('%Y-%m-%d %H:%M:%S')}</p>
            <br/>
            <p>Greetings.</p>
            <br/>
            <p>El equipo ${object.team_id.name}.</p>
        </field>
    </record>


</odoo>
