<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TEMPLATE CREATION -->

    <record id="ticket_creation" model="mail.template">
        <field name="name">Help Desk Ticket Creation</field>
        <field name="model_id" ref="helpdesk_mgmt.model_helpdesk_ticket"/>
        <field name="email_from">{{ (object.company_id.email_formatted) }}</field>
        <field name="email_to">{{ (object.partner_email) }}</field>
        <field name="lang">{{ (object.partner_id.lang) }}</field>
        <field name="subject">Ticket Creation : {{ (object.name) }}</field>
        <field name="body_html" type="html">
           <p> Dear <span style="font-weight:bold;" t-out="object.partner_id.name or ''"/></p>
           <p> This automatic message is to notify that your ticket <span style="font-weight:bold;" t-out="object.number or ''"/>
           with subject <span style="font-weight:bold;" t-out="object.name or ''"/> has been received. </p>
           <p> Creation datetime: <span style="font-weight:bold;" t-out="object.create_date.strftime('%Y-%m-%d %H:%M:%S') "/></p>
           <br/>
           <p>Greetings.</p>
           <br/>
        </field>
    </record>


</odoo>
