<?xml version="1.0" encoding="UTF-8"?>
<odoo>
      <data>
            <!-- ===================
                 ACCOUNT MOVE VIEWS
                 =================== -->

          <record model="ir.ui.view" id="account_move_xml_button_form_view">
              <field name="name">account.move.xml.button.form.view</field>
              <field name="model">account.move</field>
              <field name="inherit_id" ref="account.view_move_form"/>
              <field name="arch" type="xml">
                  <field name="ref" position="after">
                      <field name="contract_date"/>
                      <field name="statement_number"/>
                      <field name="statement_date"/>
                      <field name="notary_number"/>
                      <field name="notary_name"/>
                      <field name="affiliation_entity"/>
                      <field name="appraised_value"/>
                      <field name="priority"/>
                      <field name="alert_type_id"/>
                  </field>
                  <button name="button_draft" position="after">
                      <button name="button_generate_xml"
                              string="Imprimir xml"
                              type="object" class="oe_link oe_right"
                              invisible="state == 'draft'"/>
                  </button>
              </field>
          </record>

      </data>
</odoo>
