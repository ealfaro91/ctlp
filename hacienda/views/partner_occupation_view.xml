<?xml version="1.0" encoding="UTF-8"?>
<odoo>
      <data>

          <!-- ===================
               OCCUPATION TYPE VIEWS
               =================== -->

              <record id="partner_occupation_tree_view" model="ir.ui.view">
                  <field name="name">partner.occupation.tree.view</field>
                  <field name="model">partner.occupation</field>
                  <field name="arch" type="xml">
                      <tree>
                          <field name="code"/>
                          <field name="name"/>
                      </tree>
                  </field>
              </record>

               <record id="partner_occupation_form_view" model="ir.ui.view">
                  <field name="name">partner.occupation.form.view</field>
                  <field name="model">partner.occupation</field>
                  <field name="arch" type="xml">
                      <form>
                          <sheet>
                              <group>
                                <field name="code"/>
                                <field name="name"/>
                              </group>
                          </sheet>
                      </form>
                  </field>
              </record>

      </data>
</odoo>
