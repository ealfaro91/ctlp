<?xml version="1.0" encoding="UTF-8"?>
<odoo>
      <data>

          <!-- ===================
                RES PARTNER VIEWS
               =================== -->

          <record model="ir.ui.view" id="partner_hacienda_form">
              <field name="name">partner.hacienda.form</field>
              <field name="model">res.partner</field>
              <field name="inherit_id" ref="base.view_partner_form"/>
              <field name="arch" type="xml">
                  <field name="company_type" position="after">
                      <field name="is_location_customer" /><label for="is_location_customer" string="Es cliente"/>
                  </field>
                  <xpath expr="//notebook/page[last()]" position="after">
                        <page string="Datos del Cliente" name="client_data" invisible="is_location_customer == False">
                            <group col="4">
                              <field name="outdoor_number"/>
                              <field name="beneficiary"/>
                              <field name="civil_status"/>
                              <field name="matrimonial_regime"/>
                              <field name="spouse_name"/>
                              <field name="occupation_id"/>
                              <field name="birthday"/>
                              <field name="identificacion"/>
                              <field name="invoice_number"/>
                              <field name="curp"/>
                          </group>
                        </page>
                  </xpath>
              </field>
          </record>

      </data>
</odoo>
