<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

      <!-- ===================
           ALERT TYPE VIEWS
           =================== -->

      <record id="alert_type_tree_view" model="ir.ui.view">
          <field name="name">alert.type.tree.view</field>
          <field name="model">alert.type</field>
          <field name="arch" type="xml">
              <tree>
                  <field name="code"/>
                  <field name="name"/>
              </tree>
          </field>
      </record>

      <record id="alert_type_form_view" model="ir.ui.view">
          <field name="name">alert.type.form.view</field>
          <field name="model">alert.type</field>
          <field name="arch" type="xml">
              <form>
                  <sheet>
                      <group>
                        <field name="code"/>
                        <field name="name"/>
                      </group>
                  </sheet>
              </form>
          </field>
      </record>

  </data>
</odoo>