<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_login_background" model="ir.ui.view">
            <field name="name">res.config.settings.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='companies']" position="after">
                    <div>
                        <h2>Login Form</h2>
                        <div class="row mt16 o_settings_container"
                             name="default_taxes_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box"
                                 id="default_taxes">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label string="Login Background Image" for="login_background_image" class="col-lg-3 o_light_label"/>
                                            <field name="login_background_image" widget="image" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" id="default_taxes">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label string="Alignment" for="alignment" class="col-lg-3 o_light_label"/>
                                            <field name="alignment"/>
                                        </div>
                                        <div class="row mt16">
                                            <label string="Background Color" for="background_color" class="col-lg-3 o_light_label"/>
                                            <field name="background_color" class="d-block w-25 p-0 m-0" widget="color"/>
                                        </div>
                                        <div class="row mt16">
                                            <label string="Text Color" for="text_color" class="col-lg-3 o_light_label"/>
                                            <field name="text_color" class="d-block w-25 p-0 m-0" widget="color"/>
                                        </div>
                                         <div class="row mt16">
                                            <label string="Button Color" for="button_color" class="col-lg-3 o_light_label"/>
                                            <field name="button_color" class="d-block w-25 p-0 m-0" widget="color"/>
                                        </div>
                                        <div class="row mt16">
                                            <label string="Button Hover Color" for="button_hover_color" class="col-lg-3 o_light_label"/>
                                            <field name="button_hover_color" class="d-block w-25 p-0 m-0" widget="color"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>